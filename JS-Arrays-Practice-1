	<script>
        // 01
        function createNewArray(arraySize, valueToFill) {
          let anArray = []
          for (let i = 0; i < arraySize; i++)
            anArray.push(valueToFill)
          return anArray
        }
        createNewArray(3, 'a')
        // The for loop adds the new parts to the array
        // for each time it looped it added one of the things that needed to be added to the array
        
        // 02
        function reverseArray (numbers) {
            numbers.reverse ()
            return numbers
        }
        // the reverse statement reverses the order for it and the return makes the value extractable

        // 03
        let array = [0, 1, false, 2, undefined, '', 3, null]
        array.filter (undesireableArray)
        function undesireableArray (cleanArray) {
          return cleanArray
        }
        // filter puts the array through the function
        // filter takes "undesired" parts out and keeps only what it considers interesting

        // 04
        const duplicateFree = [1, 2, 3, 1, 2]
        function unfilteredArray (filteredArray) {
          return filteredArray.filter((arrayElement, index) => filteredArray.indexOf (arrayElement) === index)
        }
        console.log(unfilteredArray(duplicateFree))
        //duplicateFree is set equal to filteredArray the ran through the function

        // 05
       function equalArrays (array1, array2) {
         if  (array1.length != array2.length)
          return "false"
        else {
          for (let a = 0; a < array1.length; a++)
            if (array1[a] != array2[a])
              return "false"
            else
              return "true"
        }
       }
       console.log(equalArrays([1, 2, 3], [1, 2, 3]))
       // first I make sure that they have the same length becuase if not it would be still be true even if they had didn't have all the right numbers
       // next I compare them to see if they different or the same and return false for yes and true for no
  </script>
  </body>
